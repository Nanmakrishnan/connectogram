
    <!-- Base application theme. -->
    <resources>
        <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mediumPurple</item>

        </style>
    <!-- Toolbar style -->
    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Customize the toolbar background color -->
        <item name="android:background">?attr/colorPrimary</item>
        <!-- Customize the title text appearance -->
        <item name="android:titleTextAppearance">@style/ToolbarTitleText</item>
        <!-- Add more customizations as needed -->
    </style>

    <!-- Style for the toolbar title text -->
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Customize the text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Add more customizations as needed -->
    </style>



    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mediumPurple</item>
        <item name="colorPrimaryDark">@color/orchid</item>
        <item name="colorAccent">@color/mediumPurple</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>

